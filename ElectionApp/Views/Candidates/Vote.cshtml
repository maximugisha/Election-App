@model ElectionApp.Models.Candidate
@{
    ViewBag.Title = "Vote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vote</h2>

@using (Html.BeginForm("Vote", "Candidates", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Votes)
        @Html.TextAreaFor(m => m.Votes, new { @class = "form-control"})
    </div>
    <!--
    <div class="form-group">
        Html.LabelFor(m => m.Post)
        Html.EnumDropDownListFor(m => m.Post, new { class = "form-control" })
    </div>
        -->
    <input type="submit" class="btn btn-primary" value="Vote" />
}






